<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevbhoomiUttarakhand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B54D00</item>
        <item name="colorPrimaryVariant">@color/lightprimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationIcon">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/hammersmith</item>
    </style>

    <style name="trade_style">
        <item name="android:background">#EFF6FF</item>
    </style>

    <style name="background_style">
        <item name="android:background">#CAEDFA</item>
    </style>

    <style name="bottom_nav_style">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>
</resources>